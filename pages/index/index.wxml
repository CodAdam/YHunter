<!--pages/index/index.wxml-->
<view>
    <view class="swiper-container">
    <swiper autoplay="auto" interval="5000" duration="500" current="{{swiperCurrent}}" bindchange="swiperChange" class="swiper">
        <block wx:for="{{slider}}" wx:key="unique">
        <swiper-item>
            <image src="{{item.picUrl}}" class="img"></image>
        </swiper-item>
        </block>
    </swiper>
    
    <view class="dots">
        <block wx:for="{{slider}}" wx:key="unique">
        <view class="dot{{index == swiperCurrent ? ' active' : ''}}"></view>
        </block>
    </view>
    </view>
    <view  class="role-container">
        <image  bindtap="bindhunterViewTap" class="hunter" src="../../images/green.jpg"></image>
        <text>I'm hunter!</text>
    </view>
    <view bindtap="bindconsignerViewTap" class="role-container">
        <image class="consigner" src="../../images/green.jpg"></image>  
        <text>I'm consigner</text>
    </view>
    <view bindtap="bindadminViewTap" class="role-container">
        <image class="admin" src="../../images/green.jpg"></image>
        <text>I'm admin</text>
    </view>
    <view bindtap="bindtaskboardViewTap" class="role-container">
        <image class="taskboard" src="../../images/green.jpg"></image>
        <text>Taskboard</text>
    </view>
    <view bindtap="bindmoreViewTap" class="role-container">
        <image class="more" src="../../images/green.jpg"></image>
        <text>More ...</text>
    </view>
    
    <view class="liItem" wx:for="{{lists}}">
        <view class="liImgs">
            <image src="http://phptest.guoxinad.com.cn/insun_mediawap/{{item.mainimg}}" class="liImg" />
        </view>
        <view class="liDiv">
            <text class="liTit">{{item.title}}</text>
            <text class="liCnt">{{item.content}}</text>
        </view>
    </view>
</view>
